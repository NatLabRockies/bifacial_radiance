# API Keys
NREL_API_KEY=your_nrel_api_key_here
VISUAL_CROSSING_KEY=your_visual_crossing_key_here
OPENWEATHER_KEY=your_openweather_key_here
NOAA_TOKEN=your_noaa_token_here_optional

# Database Configuration
DATABASE_URL=sqlite:///solar_projects.db
# For PostgreSQL: postgresql://user:password@localhost/solar_projects

# Application Settings
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO

# Cache Settings
CACHE_ENABLED=true
CACHE_TTL_HOURS=24
CACHE_DIR=.cache

# Weather API Configuration
WEATHER_PRIMARY_SOURCE=nsrdb
WEATHER_CONSTRUCTION_SOURCE=visual_crossing
WEATHER_REALTIME_SOURCE=openweather

# Rate Limiting
API_RATE_LIMIT_PER_MINUTE=60
API_RATE_LIMIT_PER_DAY=10000

# Simulation Settings
DEFAULT_BIFACIAL_RATIO=0.70
DEFAULT_SYSTEM_LOSSES=14
DEFAULT_DC_AC_RATIO=1.2
DEFAULT_MODULE_EFFICIENCY=0.20

# File Storage
UPLOAD_FOLDER=uploads
REPORT_FOLDER=reports
MAX_UPLOAD_SIZE_MB=100

# Email Notifications (optional)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@example.com
SMTP_PASSWORD=your_email_password
NOTIFICATION_RECIPIENTS=admin@example.com,manager@example.com

# Session Configuration
SESSION_TIMEOUT_MINUTES=60
SESSION_SECRET_KEY=change_this_to_random_secret_key

# Feature Flags
ENABLE_AGRIPV=true
ENABLE_COST_ANALYSIS=true
ENABLE_WEATHER_ALERTS=true
ENABLE_PDF_REPORTS=true
ENABLE_EMAIL_NOTIFICATIONS=false

# External Services
RADIANCE_BIN_PATH=/usr/local/radiance/bin
TEMP_SIMULATION_DIR=/tmp/bifacial_radiance_sims

# Performance Settings
MAX_CONCURRENT_SIMULATIONS=3
SIMULATION_TIMEOUT_SECONDS=300
